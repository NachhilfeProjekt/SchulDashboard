{
  "name": "dashboard-backend",
  "version": "1.0.0",
  "description": "Backend for the Dashboard System",
  "main": "dist/app.js",
  "scripts": {
    "start": "node dist/app.js",
    "dev": "nodemon src/app.ts",
    "build": "npm run clean && tsc --skipLibCheck || echo 'TypeScript-Kompilierungsfehler wurden gefunden, aber der Build wird fortgesetzt...' && mkdir -p dist && cp -R src/* dist/ && find dist -name '*.ts' -exec sh -c 'js_file=$(echo \"{}\" | sed \"s/\\.ts$/.js/\"); cp \"{}\" \"$js_file\"' \\;",
    "init-db": "ts-node src/scripts/initDatabase.ts",
    "clean": "rm -rf dist/*",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "postinstall": "npm install --save-dev @types/node @types/express @types/cors @types/morgan @types/pg @types/uuid @types/bcryptjs @types/jsonwebtoken @types/winston @types/jest winston-daily-rotate-file @sendgrid/mail"
  },
  "dependencies": {
    "@sendgrid/mail": "^7.7.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "helmet": "^6.1.5",
    "joi": "^17.12.0",
    "jsonwebtoken": "^9.0.0",
    "morgan": "^1.10.0",
    "pg": "^8.11.0",
    "ts-node": "^10.9.1",
    "uuid": "^9.0.0",
    "winston": "^3.10.0",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/helmet": "^4.0.0",
    "@types/jest": "^29.5.1",
    "@types/joi": "^17.2.3",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/morgan": "^1.9.4",
    "@types/node": "^20.4.1",
    "@types/pg": "^8.6.6",
    "@types/uuid": "^9.0.1",
    "@types/winston": "^2.4.4",
    "jest": "^29.7.0",
    "nodemon": "^2.0.22",
    "supertest": "^6.3.3",
    "typescript": "^5.1.6"
  },
  "engines": {
    "node": "18.x"
  }
}
